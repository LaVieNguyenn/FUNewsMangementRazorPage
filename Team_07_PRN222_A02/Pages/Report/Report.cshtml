@page
@model Team_07_PRN222_A02.Pages.Report.ReportModel

<div class="container mt-4">
    <h2 class="text-center mb-4">üìä News Reports Dashboard</h2>

    <div class="row">
        <!-- C·ªôt b·ªô l·ªçc b√°o c√°o -->
        <div class="col-md-4 bg-light p-4 rounded shadow-sm">
            <h4 class="text-center mb-3">üîç Filter Reports</h4>
            <form method="post">
                <div class="mb-3">
                    <label for="startDate" class="form-label">Start Date</label>
                    <input type="date" id="startDate" name="StartDate" class="form-control" value="@Model.StartDate.ToString("yyyy-MM-dd")" required>
                </div>

                <div class="mb-3">
                    <label for="endDate" class="form-label">End Date</label>
                    <input type="date" id="endDate" name="EndDate" class="form-control" value="@Model.EndDate.ToString("yyyy-MM-dd")" required>
                </div>

                <div class="mb-3">
                    <label for="category" class="form-label">Categories</label>
                    <select id="category" name="Category" class="form-select">
                        <option value="">All</option>
                        @foreach (var category in Model.Categories)
                        {
                            <option value="@category" selected="@(Model.Category == category)">@category</option>
                        }
                    </select>
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">üìä View Reports</button>
                </div>
            </form>
        </div>

        <!-- C·ªôt k·∫øt qu·∫£ b√°o c√°o -->
        <div class="col-md-8">
            @if (Model.ReportData.Any())
            {
                <div class="mt-3">
                    <h4 class="text-center">üì∞ Report Results</h4>
                    <table class="table table-bordered table-hover mt-3">
                        <thead class="table-dark">
                            <tr>
                                <th>Title</th>
                                <th>Date Created</th>
                                <th>Categories</th>
                                <th>Content</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var article in Model.ReportData)
                            {
                                <tr>
                                    <td>@article.NewsTitle</td>
                                    <td>@article.CreatedDate.ToShortDateString()</td>
                                    <td>@article.CategoryName</td>
                                    <td>
                                        <textarea class="form-control" rows="4" readonly>@article.NewsContent</textarea>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <p class="text-center mt-3 text-danger">‚ö† No reports found for the selected period.</p>
            }
        </div>
    </div>
</div>
