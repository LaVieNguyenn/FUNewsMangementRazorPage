@page
@model Team_07_PRN222_A02.Pages.Profile.NewsHistoryModel
@{
    ViewData["Title"] = "News History";
}

<h2>News History</h2>

@if (Model.NewsList != null && Model.NewsList.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Created Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var news in Model.NewsList)
            {
                <tr>
                    <td>@news.NewsTitle</td>
                    <td>@news.CreatedDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        <a asp-page="/News/Details" asp-route-id="@news.NewsArticleId" class="btn btn-info">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No news articles found.</p>
}
