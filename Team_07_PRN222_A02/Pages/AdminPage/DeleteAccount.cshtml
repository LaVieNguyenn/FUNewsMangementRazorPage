@page "{id:int}"
@model Team_07_PRN222_A02.Pages.AdminPage.DeleteAccountModel
@{
    ViewData["Title"] = "Delete Account";
}

<div class="container mt-4">
    <h2 class="text-center text-danger mb-4">Delete Account</h2>

    <div class="alert alert-warning text-center">
        <p>Are you sure you want to delete this account?</p>
        <p><strong>@Model.Account.AccountName (@Model.Account.AccountEmail)</strong></p>
    </div>

    <form method="post">
        <input type="hidden" asp-for="Account.AccountID" />

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-danger btn-delete">
                <i class="fas fa-trash-alt"></i> Confirm Delete
            </button>
            <a asp-page="ManageAccount" class="btn btn-secondary btn-cancel">
                <i class="fas fa-times"></i> Cancel
            </a>
        </div>
    </form>
</div>
<style>
    .btn-delete {
        background-color: #dc3545;
        color: white;
        font-size: 16px;
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
        border: none;
    }

        .btn-delete:hover {
            background-color: #c82333;
        }

    .btn-cancel {
        background-color: #6c757d;
        color: white;
        font-size: 16px;
        padding: 10px 20px;
        border-radius: 5px;
        font-weight: bold;
        transition: all 0.3s ease-in-out;
        border: none;
        margin-left: 15px;
    }

        .btn-cancel:hover {
            background-color: #5a6268;
        }
</style>